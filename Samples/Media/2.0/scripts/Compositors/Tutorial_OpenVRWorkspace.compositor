compositor_node Tutorial_OpenVRNode
{
	in 0 stereo_output

	texture rtt target_width target_height target_format

	target rtt
	{
		//Eye render
		pass render_scene
		{
			load
			{
				all				clear
				clear_colour	0.2 0.4 0.6 1
			}
			store
			{
				depth	dont_care
				stencil	dont_care
			}

			//0x01234567
			identifier 19088743

			overlays	off

			//we manually add the VrCullCamera
			//if we compile with Open_VR
			//cull_camera VrCullCamera


			shadows		ShadowMapDebuggingShadowNode

			instanced_stereo true
			viewport 0 0.0 0.0 0.5 1.0
			viewport 1 0.5 0.0 0.5 1.0
		}

		//Render overlays last on the entire screen
		pass render_scene
		{
			rq_first	254
			rq_last		255

			overlays	on
		}
	}

	target stereo_output
	{
		pass compute
		{
			job VR/RadialDensityMaskReconstruct

			input 0 rtt
			uav 0 stereo_output write PFG_RGBA8_UNORM
		}
	}
}

